(define (problem clara-rainy-day)
  (:domain clara-rainy-day)
  (:objects
    clara mum animal puddle - object)
  (:init
    (outside clara)
    (intends clara (not (inside clara)))
    (intends clara (not (scared clara)))
    (intends clara (not (frozen clara)))
    (intends clara (not (covered-in-mud clara)))
    (intends clara (not (heard-noise clara)))
    (intends clara (not (saw-animal clara)))
    (intends clara (not (brave clara)))
    (intends clara (not (outside mum)))
    (intends clara (not (outside animal)))
    (intends clara (not (outside puddle)))
    (intends mum (not (outside mum)))
    (intends animal (not (outside animal)))
    (intends puddle (not (outside puddle)))
  )
  (:goal
    (and (inside clara)
    (not (scared clara))
    (not (frozen clara))
    (not (covered-in-mud clara)))
  )
)